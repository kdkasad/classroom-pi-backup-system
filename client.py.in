# Default IP address of the backup server if one is not provided in the stored
# configuration data
DEFAULT_SERVER_IP = 'm4_SERVER_IP'

# Port on which the backup server is serving configuration
CONFIG_SERVER_PORT = m4_HTTPD_PORT

